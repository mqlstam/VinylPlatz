{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../../dist/out-tsc",
    "declaration": true,
    "types": ["node"],
    "target": "es2021",
    "strictNullChecks": true,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "composite": true
  },
  "include": ["src/**/*.ts", "src/lib/album/album.module.ts", "src/lib/album/album.service.ts", "src/lib/user/user.module.ts", "src/lib/user/user.service.ts", "src/lib/album/album.entity.ts", "src/lib/user/user.controller.ts", "src/lib/user/user.repository.ts", "src/index.ts"],
  "exclude": ["jest.config.ts", "src/**/*.spec.ts", "src/**/*.test.ts"]
}
